#!/bin/bash

TEST=$(dirname $0)

echo -n "Running $TEST: "

if gs --version | grep -q '^7\.'; then
  echo "SKIPPED GS too old"
  exit 0
fi

cd build/resource/Resource && gs -dNOPAUSE -dQUIET -dBATCH -sDEVICE=nullpage -P ../../../$TEST/test.ps

if [ $? -eq 0 ]; then
  echo "PASS"
  exit 0
else
  echo "FAIL"
  exit 1
fi

